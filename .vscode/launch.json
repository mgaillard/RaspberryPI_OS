{
    "version": "0.2.0",
    "configurations": [
        // Use with the Native Debug extension
        {
            "name": "Attach to QEMU (Native)",
            "type": "gdb",
            "request": "attach",
            "gdbpath": "/usr/bin/gdb-multiarch",
            "executable": "${workspaceFolder}/build/kernel.elf",
            "target": ":1234",
            "remote": true,
            "printCalls": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        // Use with the C/C++ VS Code extension
        {
            "name": "Attach to QEMU (VS Code)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kernel.elf",
            "MIMode": "gdb",
            "cwd": "${workspaceRoot}",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}